{
  "name": "bullboard",
  "version": "0.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "description": "A docker image for @bull-board",
  "keywords": [
    "bull",
    "bullmq",
    "redis",
    "queue",
    "monitoring",
    "dashboard",
    "docker"
  ],
  "type": "module",
  "bugs": {
    "url": "https://github.com/Venatum/bull-board-docker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Venatum/bull-board-docker.git"
  },
  "scripts": {
    "start": "node .",
    "start:dev": "nodemon .",
    "start:docker": "docker compose up --force-recreate --renew-anon-volumes --wait --detach",
    "start:docker-deps": "npm run start:docker redis",
    "stop:docker": "docker compose down -v",
    "commitlint": "commitlint --from origin/master",
    "commit": "cz",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@bull-board/api": "^6.20.0",
    "@bull-board/express": "^6.20.0",
    "body-parser": "^2.2.2",
    "bull": "^4.16.5",
    "bullmq": "^5.70.1",
    "connect-ensure-login": "^0.1.1",
    "dotenv": "^17.3.1",
    "exponential-backoff": "^3.1.3",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "ioredis": "^5.9.3",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@commitlint/prompt": "^20.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.14",
    "semantic-release": "^25.0.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "yarn": "please use npm",
    "npm": ">=11",
    "node": ">=24",
    "pnpm": "please use npm",
    "bun": "please use npm"
  },
  "author": {
    "name": "Vincent LE QUEC (Venatum)",
    "url": "https://github.com/Venatum"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
