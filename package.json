{
  "name": "bullboard",
  "version": "0.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "description": "A docker image for @bull-board",
  "keywords": [
    "bull",
    "bullmq",
    "redis",
    "queue",
    "monitoring",
    "dashboard",
    "docker"
  ],
  "bugs": {
    "url": "https://github.com/Venatum/bull-board-docker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Venatum/bull-board-docker.git"
  },
  "scripts": {
    "start": "node -r esm .",
    "start:dev": "nodemon -r esm .",
    "start:docker": "docker compose up --force-recreate --renew-anon-volumes --wait --detach",
    "start:docker-deps": "npm run start:docker redis",
    "stop:docker": "docker compose down -v",
    "commitlint": "commitlint --from origin/master",
    "commit": "cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@bull-board/api": "^6.12.5",
    "@bull-board/express": "^6.12.5",
    "body-parser": "^1.20.3",
    "bull": "^4.16.5",
    "bullmq": "^5.58.0",
    "connect-ensure-login": "^0.1.1",
    "dotenv": "^17.2.1",
    "esm": "^3.2.25",
    "exponential-backoff": "^3.1.2",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "ioredis": "^5.7.0",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/prompt": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "babel-jest": "^30.0.5",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "semantic-release": "^24.2.7"
  },
  "engines": {
    "yarn": "please use npm",
    "npm": ">=9",
    "node": ">=20",
    "pnpm": "please use npm",
    "bun": "please use npm"
  },
  "author": {
    "name": "Vincent LE QUEC (Venatum)",
    "url": "https://github.com/Venatum"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
